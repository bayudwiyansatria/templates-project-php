#-----------------------------------------------------------------------------------------------------------------------
# Docker Base
#-----------------------------------------------------------------------------------------------------------------------
FROM nginx:stable AS base
LABEL maintainer="bayudwiyansatria@gmail.com"
WORKDIR /var/www/html

#-----------------------------------------------------------------------------------------------------------------------
# Docker Build
#-----------------------------------------------------------------------------------------------------------------------
FROM base AS build
WORKDIR /app

COPY docker/nginx/default.conf .

#-----------------------------------------------------------------------------------------------------------------------
# Docker Release
#-----------------------------------------------------------------------------------------------------------------------
FROM base AS release

COPY --from=build /app /etc/nginx/conf.d

EXPOSE 80